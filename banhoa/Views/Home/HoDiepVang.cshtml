@model IEnumerable<banhoa.Models.Hoa>
@{
    ViewBag.Title = "HoDiepVang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/render-index.css" rel="stylesheet" />
<div class="body" style="margin-top:20px">
    <div class="container">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 text-center col-sm-6 col-xs-6">
                    <div>
                        <div class="pic">
                            <a href="/Hoa/XemChiTiet/@item.IdHoa">
                                <img class="image" src="@Html.DisplayFor(modelItem => item.Hinh)" alt="">
                            </a>
                        </div>
                        <div class="caption">
                            <h2 class="h2"><a class="a" href="@Url.Action("XemChiTiet",new { id = item.IdHoa})">  @Html.DisplayFor(modelItem => item.Ten) </a></h2>
                            <span class="gia">Giá : <strong>@Html.DisplayFor(modelItem => item.GiaBan)</strong>  </span>
                            <p>
                                <a href="#" id="btn1" class="btn btn-success fa fa-shopping-cart" role="button">  Đặt mua</a>
                               
                            </p>
                        </div>
                    </div>
                </div>}
        </div>
    </div>
</div>

